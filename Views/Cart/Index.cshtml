@{
    ViewData["Title"] = "Carrito de Compras";
}

    <div class="text-center">
    <h1 class="display-4">Carrito de compras</h1>
    </div>
        @if(ViewBag.cart != null){
    <div class="table-responsive">
    <table class="table" cellpadding="2" cellspacing="2"  >
        <tr>
            <th>Opción</th>
            <th>Id</th>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Cantidad</th>
            <th>Sub-Total</th>
        </tr>
        @foreach (var item in ViewBag.cart)
        {
            <tr>
                <td><a asp-controller="cart" asp-action="remove" asp-route-id="@item.Producto.ID">Eliminar del carrito</a></td>
                <td>@item.Producto.idProduct</td>
                <td>@item.Producto.nameProduct</td>
                <td>@item.Producto.priceProduct</td>
                <td>@item.Quantity</td>
                <td>$@(item.Producto.priceProduct * item.Quantity)</td>
            </tr>
        }
        <tr>
            <td  colspan="5">Total a pagar</td>
            <td align="Left">
                $@ViewBag.total
            </td>
        </tr>
    </table>
    </div>
    } else {
        <h1>No se han añadido productos</h1>
    }
    <br>
    <a class="btn btn-success" asp-controller="Catalogo" asp-action="Index">Continuar Comprando</a>
    @if(ViewBag.cart != null){
    <a class="btn btn-success" asp-controller="Catalogo" asp-action="Index">Finalizar Compra</a>
    }
