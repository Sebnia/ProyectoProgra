@model List<Producto>

@{
    ViewData["Title"] = "Home Page";
}

  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>



<div class="text-center">
    <h1 class="display-4">Productos registrados</h1>

    
        <div align="right" style="margin: 15px;">
            <button class="btn btn-success" onclick="window.location='@Url.Action("Registrar", "Producto")'">Agregar</button>
        </div>
    
    
    <div class="table-responsive">
    <table class="table">
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Descripción</th>
            <th>Especificación</th>
            <th>Categoría</th>
            <th>Borrar</th> 

        </tr>
        @if (Model.Count == 0) {
            <tr>
                <td colspan="4" class="text-center">No se encontraron registros.</td>
            </tr>
        }
            @foreach (var producto in Model) 
        {
            <tr>
                <td>@producto.idProduct</td>
                <td>@producto.nameProduct</td>
                <td>@producto.priceProduct</td>
                <td>@producto.describeProduct</td>
                <td>@producto.specifyProduct</td>
                <td>@producto.category</td>

                <td>
                        <form asp-action="Borrar" id="formsa">
                        <input type="hidden" name="id" value="@producto.idProduct" />
                        <button class="btn btn-danger" type="submit">Borrar</button>
                        </form>
                </td>
            </tr>
        }
    </table>
  
    </div>

   <script>



   document.addEventListener("submit", function(e){

           e.preventDefault();

       });

       
  </script>

 