@model Producto;

@{
ViewData["Title"] = "Registro de Producto";
}


<div class="row" >


    <div class="col-md-4">
        <h1 class="display-4">Registrar Producto</h1>

        <form asp-controller="Producto" asp-action="Registrar" enctype = "multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group row">
            
            <div class="col-md-10">
                @Html.DisplayFor(model => model.idProduct)
                @Html.HiddenFor(model=> model.idProduct)
                @Html.ValidationMessageFor(model => model.idProduct)
            </div>                
            </div>

            <div class="form-group row">
                <input asp-for="nameProduct" class="form-control" placeholder="Nombre del Producto" />
                <span asp-validation-for="nameProduct" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <input asp-for="priceProduct" class="form-control" placeholder="Precio del Producto" />
                <span asp-validation-for="priceProduct" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <label asp-for="imageFile" class="control-label"></label>
                <input asp-for="imageFile" class="form-control"  accept="image/*"/>
                <span asp-validation-for="imageFile" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <textarea asp-for="describeProduct" class="form-control" placeholder="Ingrese una descripciÃ³n del Producto"></textarea>
                <span asp-validation-for="describeProduct" class="text-danger"></span>
            </div>
            

            <div class="form-group row">
                <label asp-for="category" class="col-sm-2 col-form-label"></label>
                
                <div class="col-sm-10">
                <select asp-for="category" asp-items="Model.categories" class="custom-select mr-sm-2"></select>
                <span asp-validation-for="category" class="text-danger"></span>

                </div>
            </div>

            <div class="form-group row">
                <textarea asp-for="specifyProduct" class="form-control" placeholder="Ingrese las especificaciones del Producto"></textarea>
                <span asp-validation-for="specifyProduct" class="text-danger"></span>
            </div>

            <div class="form-group" align='center'>
                 <button type="submit" class="btn btn-primary">Registrar</button> 
            </div>    

        </form>

         <td>@Html.DisplayTextFor(model => model.Response)</td>  
    </div>

</div>

<script></script>

